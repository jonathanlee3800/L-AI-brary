{
  "name": "librarybuddies",
  "version": "1.0.0",
  "description": "skeleton extension",
  "manifest_version": 3,
  "author": "librarybuddies",
  "action": {
    "default_popup": "src/index.html",
    "default_title": "ease ur search"
  },

  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": false
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },

  "background":{
    "service_worker": "src/sample.js"
  },

  "permissions": [
    "storage",
    "tabs",
    "contextMenus",
    "tabs",
    "activeTab",
    "scripting"
  ]
}
